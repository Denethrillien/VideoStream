@model VideoStream.Models.UserModel

@{
    ViewBag.Title = "Register";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "User registration incomplete. Please check your input data.");
    <div class="PopUp ShadowBox">
        <fieldset class="Fieldset">
            <legend>
                User account registration
            </legend>
            <div class="RegForm">
                @Html.TextBoxFor(u => u.userName, new { placeholder = "Username", @class = "RegBox" })
            </div>
            <div class="RegForm">
                @Html.TextBoxFor(u => u.email, new { placeholder = "e-mail", @class = "RegBox" })
            </div>
            <div>
                @Html.TextBoxFor(u => u.password, new { placeholder = "Password", @class = "RegBox" })
            </div>
            <div class="RegForm">
                <input type="submit" value="Go!" />
            </div>
        </fieldset>
    </div>
}
