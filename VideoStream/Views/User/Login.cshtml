@model VideoStream.Models.UserModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Invalid username or password");
    <div>
        <fieldset class="Fieldset">
            <legend>
                Login |
                @Html.ActionLink("Register", "Register", "User")
            </legend>
            <div class="RegForm">
                @Html.TextBoxFor(u => u.email, new { placeholder = "Username", @class = "RegBox" })
                @Html.ValidationMessageFor(u => u.email)
            </div>
            <div class="RegForm">
                @Html.PasswordFor(u => u.password, new { placeholder = "Password", @class = "RegBox" })
                @Html.ValidationMessageFor(u => u.password)
            </div>
            <div class="RegForm">
                <input type="submit" value="Login" />
            </div>
        </fieldset>
    </div>
}
