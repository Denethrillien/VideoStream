@model PEAmedia.Web.Models.Profile_Comment
@using (Html.BeginForm())
{
        <div id="compose">
            @Html.TextBoxFor(u => u.Title, new { placeholder = "Title", @class = "CommentBox" })
            @Html.TextAreaFor(u => u.Entry, new { placeholder = "Write your message here...", @class = "CommentArea" })
        </div>
        <a href="javascript:void(0)" class="SubmitForm">Send</a>
        <span>
            |
        </span>
        @Ajax.ActionLink("Close ", "ClearContainer", "Profile", new AjaxOptions { UpdateTargetId = "commentControls" })
}